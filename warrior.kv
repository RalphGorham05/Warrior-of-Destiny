#: import SwapTransition kivy.uix.screenmanager.SwapTransition


ScreenManagement:
    transition: SwapTransition()
    MainScreen: 
    HelpScreen:
	VoiceScreen:
	
<MainScreen>:
    name: 'main'
	
	FloatLayout:
		size:(800,800)
		Button:
			on_release: app.root.current = 'help'
			text: 'Press here to go to help screen'
			font_size: 10
			size_hint:(.25, .1)
			pos: (200,100)
				
		Button:
			on_release: app.root.current = 'voice'
			text: 'Press here if you want to run with voice'
			font_size: 10
			size_hint:(.25, .1)
			pos: (200,150)
			
		Button:
			on_release: app.root.current = 'voice'
			text: 'Press here if you want to run with voice'
			font_size: 10
			size_hint:(.25, .1)
			pos: (200,200)
            
<HelpScreen>:
    name: 'help'
	FloatLayout:
		size: (800,800)
		Button:
			on_release: app.root.current = 'main'
			text: 'Press here to go back home'
			font_size: 10
			size_hint:(.25, .1)
			pos: (0,700)
		
		Label:
			text: 'how to play \n first dothis'
	
		

<VoiceScreen>:
    name: 'voice'
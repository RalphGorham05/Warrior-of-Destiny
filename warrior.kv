#: import SwapTransition kivy.uix.screenmanager.SwapTransition


ScreenManagement:
    transition: SwapTransition()
    HomeScreen:
    HelpScreen:
	RegisterScreen:
    ContinueScreen:
	StoryScreen:

<CustomLayout>
    canvas.after:
        Color:
            rgba: 255, 0, 255, .7

		Rectangle:
			pos: (200,200)
			size: (50,59)


<HomeScreen>:
    name: 'home'
	CustomLayout:

        Image:
            source: 'Game\images\world_map.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x':.5, 'center_y': .5}

        Label:
    		text: 'Warrior of Destiny'
            color: 0, 0, 0, 1
    		font_name: 'fonts\Halo3.ttf'
    		font_size: 75
    		pos_hint: {'center_x':.5, 'y':.3}

		Button:
			on_release: app.root.current = 'help'
			text: 'Press here to go to help screen'
			font_size: 10
			size_hint:(.25, .1)
			pos_hint: {'center_x':.5, 'y':.3}

		Button:
			on_release: app.root.current = 'register'
			text: 'Join the Warrior Ranks'
			font_size: 10
			size_hint:(.25, .1)
			pos_hint: {'center_x':.5, 'y':.5}

		Button:
			on_release: app.root.current = 'continue'
			text: 'Continue saved Game'
			font_size: 10
			size_hint:(.25, .1)
			pos_hint: {'center_x':.5, 'y':.4}

<HelpScreen>:
    name: 'help'
	FloatLayout:

        Image:
            source: 'Game\images\world_map.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x':.5, 'center_y': .5}

		Button:
			on_release: app.root.current = 'home'
			text: 'Press here to go back home'
			font_size: 10
			size_hint:(.25, .1)
			pos_hint: {'right':.2, 'top':1}
            background_color: (255, 0, 255, .7)

		Label:
			text: 'About Warrior of Destiny'
			font_name: 'fonts\8-BIT.ttf'
			font_size: 30
			pos_hint: {'center_x':.5, 'y':.3}

		Label:
			text: 'Game Objective'
            font_name: 'fonts\8-BIT.ttf'
			font_size: 20
			pos_hint: {'center_x':.5, 'y':.2}

		Label:
			text: 'You choose your character based on whether you are good or evil.\n You must defeat each character in all the locations on each continent. Once you beat each character, you will then fight a boss character.\n If you beat the boss character, you will have conquered that continent. You can select another continent to conquer until you finish them all. After that, you fight\n the Game boss to see if you are a true warrior of Destiny.'
			font_name: 'fonts\Halo3.ttf'
            font_size: 10
			#pos: (100,50)
			pos_hint: {'x':.3, 'y':.1}

        Label:
			text: 'Game Controls'
            font_name: 'fonts\8-BIT.ttf'
			font_size: 20
			pos_hint: {'center_x':.5, 'y':.05}

        Label:
			text: 'You select a move based on your available AP. You have 4 potions in your inventory to choose from, which either restore some HP or AP.'
			font_name: 'fonts\Halo3.ttf'
            font_size: 10
			#pos: (100,50)
			pos_hint: {'x':.3, 'y':.025}

        Label:
			text: 'Characters'
			font_name: 'fonts\8-BIT.ttf'
            font_size: 20
			pos_hint:{'center_x':.5, 'y':-.2}

        Label:
			text: 'There are 8 playable characters in the game, 4 of which are good and 4 are evil. You can choose the characters based on test to determine whether\nyou are a savior or destroyer.'
			font_name: 'fonts\Halo3.ttf'
            font_size: 10
			pos_hint: {'x':.3, 'y':-.3}




<RegisterScreen>:
    name: 'register'
	FloatLayout:

		Image:
            source: 'Game\images\world_map.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x':.5, 'center_y': .5}

		Button:
			on_release: app.root.current = 'home'
			text: 'Press here to go back home'
			font_size: 10
			size_hint:(.25, .1)
			pos_hint: {'right':.2, 'top':1}

        Label:
			text: 'Join your path of Destiny'
			font_size: 30
			pos_hint: {'center_x':.5, 'y':.3}

        Label:
			text: 'Choose Username'
			font_size: 20
			pos_hint: {'center_x':.37, 'y':.13}


		TextInput:
			id: username
			size_hint: (.2, .05)
            pos_hint: {'center_x':.6, 'y':.61}

        Label:
			text: 'Enter Password'
			font_size: 20
			pos_hint: {'center_x':.37, 'y':.07}

		TextInput:
			id: password
			size_hint: (.2, .05)
            pos_hint: {'center_x':.6, 'y':.55}
			password: True

        Label:
			text: 'Confirm Password'
			font_size: 20
			pos_hint: {'center_x':.37, 'y':.015}

		TextInput:
			id: c_password
			size_hint: (.2, .05)
            pos_hint: {'center_x':.6, 'y':.49}
			password: True

		Button:
			id: validate_button
			on_press: root.validate_password(register_button, password, c_password)
			text: 'Confirm password matches'
			font_size: 10
			size_hint:(.15, .15)
			pos_hint: {'center_x':.37, 'y':.2}

		Button:
			id: reset_button
			on_press: root.reset(register_button)
			text: 'Reset'
			font_size: 10
			size_hint:(.15, .15)
			pos_hint: {'center_x':.65, 'y':.2}
			
		Button:
			id: register_button
			on_press: root.register()
			text: 'Join the Warrior ranks'
			font_size: 10
			size_hint:(.15, .15)
			pos_hint: {'center_x':.37, 'y':.025}




<ContinueScreen>:
    name: 'continue'
	FloatLayout:
		size: (800,800)
		Button:
			on_release: app.root.current = 'home'
			text: 'Press here to go back home'
			font_size: 10
			size_hint:(.25, .1)
			pos: (0,550)
			

<StoryScreen>:
    name: 'story'
	FloatLayout:
		size: (800,800)
		Button:
			on_release: app.root.current = 'home'
			text: 'Press here to go back home'
			font_size: 10
			size_hint:(.25, .1)
			pos: (0,550)
